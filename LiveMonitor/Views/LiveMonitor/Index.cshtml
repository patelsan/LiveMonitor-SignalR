<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="css/bootstrap.css"/>

    <title>Live Monitor</title>
</head>
<body>
       <div class="navbar">
            <div class="navbar-inner">
                <a class="brand" href="#">Live Monitor</a>
                <ul class="nav">
                    <li class="active"><a href="#">Monitoring</a></li>
                    <li><a href="#">Events</a></li>
                    <li><a href="#">Reports</a></li>
                    <li><a href="#">Settings</a></li>
                </ul>
            </div>
        </div>

       <div class="container">
        <div class="row">
            <div class="span6">
               <h4>Live Statistics</h4>
           </div>
           <div class="span6">
               <a href="#sendNotification" role="button" class="btn pull-right" data-toggle="modal">Send Notification</a>
           </div></div>
        <div class="row">
            <div class="span6">
                <div id="cpuUsage" style="height: 240px; width:100%;"></div>
            </div>
            <div class="span6">
                <div id="memoryUsage" style="height: 240px; width:100%;"></div>
            </div>
        </div>

        <div class="row">
               <div class="span12">
                   <h4>Notifications</h4>
               </div>
               <div id="notifications" class="span12">

               </div>
           </div>
       </div>

       <!-- Modal -->
       <div id="sendNotification" class="modal hide fade" tabindex="-1" role="dialog">
           <div class="modal-header">
               <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
               <h3 id="myModalLabel">Broadcast Notification</h3>
           </div>
           <div class="modal-body">
               <textarea id="notification" class="input-block-level" rows="5" placeholder="Your message..."></textarea>
           </div>
           <div class="modal-footer">
               <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
               <button id="sendnotification" class="btn btn-primary">Broadcast</button>
           </div>
       </div>

        <script type="text/javascript" src="js/canvasjs.js"></script>
        <script src="http://code.jquery.com/jquery-2.0.0.js"></script>
        <script type="text/javascript" src="js/bootstrap.js"></script>
		<script src="~/Scripts/jquery.signalR-1.1.2.js"></script>
		<script src="~/signalr/hubs"></script>
        <script type="text/javascript" src="js/app.js"></script>
</body>
</html>